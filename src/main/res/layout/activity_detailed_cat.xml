<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedCatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:" />

            <TextView
                android:id="@+id/cat_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[19]" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:" />

            <TextView
                android:id="@+id/cat_description_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight:" />

            <TextView
                android:id="@+id/cat_weight_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_temperament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperament:" />

            <TextView
                android:id="@+id/cat_temperament_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Origin:" />

            <TextView
                android:id="@+id/cat_origin_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_lifespan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lifespan:" />

            <TextView
                android:id="@+id/cat_lifespan_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_wikilink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wikipedia Link:" />

            <TextView
                android:id="@+id/cat_wikilink_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cat_friendliness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dog Friendliness:" />

            <TextView
                android:id="@+id/cat_friend_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="value"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <Button
            android:id="@+id/fav_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to favourites" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>